<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/iconimage" />

    <TextView
        android:id="@+id/controlPortfolioTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Control Portfolio Total Value: $0.00" />

    <!-- Portfolio 0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <View
            android:id="@+id/portfolio0ColorBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/portfolio0TotalValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Portfolio 0 Total Value: $0.00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/portfolio0Accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy:"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reset" />

        <Button
            android:id="@+id/resetAllPortfoliosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:visibility="gone" />

        <Button
            android:id="@+id/resetPortfolioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpaca" />

        <Button
            android:id="@+id/resetControlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="View" />

        <Button
            android:id="@+id/dailyPerformaceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Changes" />

        <Button
            android:id="@+id/openPortfolioAllActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio Data"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/frequencyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter update frequency or type &quot;sell all&quot; "
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/updateFrequencyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Frequency"
            android:visibility="gone" />

        <Button
            android:id="@+id/fetchPortfolioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh" />
    </LinearLayout>

    <!-- Add this inside your existing layout, e.g., LinearLayout or ConstraintLayout -->
    <Spinner
        android:id="@+id/commandSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:spinnerMode="dropdown" />

    <!-- Optionally, add a button to send the selected command -->
    <Button
        android:id="@+id/sendCommandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:text="Send Command" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
